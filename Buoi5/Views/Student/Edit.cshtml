@model Buoi5.Models.Student

@{
    ViewBag.Title = "Sửa thông tin học sinh";
}

<h2>Sửa thông tin học sinh</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="StudentId" />

    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GradeId" class="control-label"></label>
        <select asp-for="GradeId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Grades, "GradeId", "GradeName"))">
            <option disabled selected>-- Chọn lớp --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

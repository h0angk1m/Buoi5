@model IEnumerable<Buoi5.Models.Student>

@{
    ViewBag.Title = "Danh sách học sinh";
}

<h2>Danh sách học sinh</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm học sinh</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Lớp</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName @student.LastName</td>
                <td>@student.Grade?.GradeName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@student.StudentId" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@student.StudentId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

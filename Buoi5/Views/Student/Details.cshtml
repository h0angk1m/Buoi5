@model Buoi5.Models.Student

@{
    ViewBag.Title = "Chi tiết học sinh";
}

<h2>Chi tiết học sinh</h2>

<div class="form-group">
    <label>Họ tên:</label>
    <p>@Model.FirstName @Model.LastName</p>
</div>

<div class="form-group">
    <label>Lớp:</label>
    <p>@Model.Grade?.GradeName</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-warning">Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
